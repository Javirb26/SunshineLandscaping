---

export interface Props {
    src: string;
    alt: string;
    caption: string;
}

const {src, alt, caption } = Astro.props
---

    <div class="w-full h-full flex flex-col items-center justify-center py-4 px-4 my-4">

      <button class="w-1/3 h-[120px] mb-3 overflow-hidden">
        <img class="max-h-full object-cover hover:cursor-pointer hover:shadow-xl" src={src} alt={alt}>
      </button>

      <p class="font-semibold">{caption}</p>

    </div>

    <div id="default-modal" tabindex="-1" aria-hidden="true">

    </div>

