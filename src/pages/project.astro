---
import Navigation from "../components/Navigation.astro";
import Footer from "../components/Footer.astro";
import Layout from "../layouts/Layout.astro";
import Projects from "../components/Projects.astro";
import Banner from "../components/Banner.astro";
---

<Layout>
  <Navigation />
    <div class="pt-20 md:pt-24 ">
      <Banner 
        breadCrumb="Projects"
        pageTitle="Explore our work"
        description="Take a look at some of the recent landscaping projects we've completed in the Tampa Bay Area"
        src="https://res.cloudinary.com/dic4llr8p/image/upload/v1750439854/projectbanner_elaa1n.png"
        alt="alt"
        textColor="text-white"
      />
      
      <main class="bg-slate-50">
        <!-- Container for project images -->
        <div class="flex flex-wrap justify-center gap-x-10 lg:max-w-[1440px] mx-auto py-4 px-1">

          <Projects
            src="https://res.cloudinary.com/dic4llr8p/image/upload/v1750438714/after-1_xjzuwg.png"
            hoverSrc="https://res.cloudinary.com/dic4llr8p/image/upload/v1750438735/before-1_zfkpea.png"
            alt="Backyard after major clean up with trimmed palms and fresh grass"
            caption="Backyard Transformation & Cleanup"
            blurb="A massive backyard property clean-up: we cut the grass, trimmed palm trees, and removed overgrown plants to restore this outdoor space to a beautiful, inviting retreat."
          />
          <Projects
            src="https://res.cloudinary.com/dic4llr8p/image/upload/v1750438714/after-2_wrox4z.png"
            hoverSrc="https://res.cloudinary.com/dic4llr8p/image/upload/v1750438733/before-2_swfcy6.png"
            alt="Backyard after leaf clean up and grass cutting"
            caption="Backyard Leaf Cleanup"
            blurb="We revitalized this backyard by clearing away leaves and giving the grass a fresh, even cut—leaving the space neat, tidy, and ready for enjoyment."
          />
          <Projects
            src="https://res.cloudinary.com/dic4llr8p/image/upload/v1750439863/after-3_jdv0ix.png"
            hoverSrc="https://res.cloudinary.com/dic4llr8p/image/upload/v1750438730/before-3_lzjn63.png"
            alt="Front yard after makeover with clean edges and leaf removal"
            caption="Front Yard Makeover"
            blurb="This front yard makeover included grass cutting, precise edging for a modern finish, and a thorough leaf cleanup to create a crisp, welcoming entrance."
          />
          <Projects
            src="https://res.cloudinary.com/dic4llr8p/image/upload/v1750438706/after-4_y1czeq.png"
            hoverSrc="https://res.cloudinary.com/dic4llr8p/image/upload/v1750438723/before-4_h23ygd.png"
            alt="Palm tree after professional trimming"
            caption="Palm Tree Trimming"
            blurb="We transformed an unruly palm tree into a beautifully trimmed centerpiece, enhancing curb appeal and giving the property a polished look any owner would be proud of."
          />
          <Projects
            src="https://res.cloudinary.com/dic4llr8p/image/upload/v1750438706/after-4_y1czeq.png"
            hoverSrc="https://res.cloudinary.com/dic4llr8p/image/upload/v1750438723/before-4_h23ygd.png"
            alt="Backyard after grass cutting, edging, and debris removal"
            caption="Backyard Cleanup & Restoration"
            blurb="Our team fully cut and edged the grass, removed weeds, and cleared away debris and unwanted materials to restore this backyard to a clean, usable space."
          />
          <Projects
            src="https://res.cloudinary.com/dic4llr8p/image/upload/v1750438717/after-6_fravy4.png"
            hoverSrc="https://res.cloudinary.com/dic4llr8p/image/upload/v1750438734/before-6_naav2y.png"
            alt="Side of house after plant, vine, and grass removal"
            caption="Siding & Landscape Renewal"
            blurb="We removed overgrown plants and vines, cut the grass, and refreshed the side of this home—turning it into a tidy, low-maintenance area any homeowner can love."
          />

        </div>
      </main>
      <Footer/>
    </div>
</Layout>
