---
import Navigation from "../components/Navigation.astro";
import Footer from "../components/Footer.astro";
import Layout from "../layouts/Layout.astro";
import Banner from "../components/Banner.astro";
---

<Layout>
  <Navigation />
  <div class="pt-20 md:pt-24 ">
    <Banner
      breadCrumb="Contact"
      pageTitle="Get in Touch"
      description="Have questions or need assistance? Our team is here to help. Fill out the form below, and we'll get back to you as soon as possible."
      src="/assets/beige-yard.png"
      alt="#"
      textColor="text-white"
    />

    <main class="bg-slate-50">
      <div class="mx-auto max-w-5xl py-10">
        <form 
            name="contact" 
            method="post" 
            data-netlify="true"
            class="flex flex-col max-w-3xl gap-y-5"
          >
          <div class="flex gap-x-10">
              <div class="w-full">
                <label for="name">Full Name</label>
                <input
                  type="text"
                  placeholder="John Doe"
                  class="border rounded-md p-1.5 w-full"
                  id="name"
                  name="name"
                />
              </div>

              <div class="w-full">
                <label for="name">Select Service</label>
                <select class="border rounded-md p-1.5 w-full" name="Service-Selection" id="selectInput">
                  <option value="Lawncare">Lawncare</option>
                  <option value="Property-Clean-Up">Property Clean-ups</option>
                  <option value="Tree-Trimming">Tree trimming</option>
                  <option value="Tree-Cutting">Tree cutting/removal</option>
                  <option value="Irrigation">Irrigation</option>
                  <option value="Mulching">Mulching</option>
                  <option value="Sod-Installation">Sod Installation</option>
                  <option value="Other">Other</option>
                </select>
              </div>
          </div>
          <div class="flex gap-x-10">
            <div class="w-full">
              <label for="email">Email Address</label>
              <input
                class="border rounded-md p-1.5 w-full"
                placeholder="johndoe2@gmail.com"
                type="email"
                name="Client-Email"
                id="inputEmail"
              />
            </div>

            <div class="w-full">
              <label for="">Phone Number</label>
              <input
                class="border rounded-md p-1.5 w-full"
                placeholder="813-123-4567"
                pattern="^[0-9-+\s()]{6,16}"
                type="tel"
                name="Client-Phone"
                id="inputTel"
              />
            </div>
          </div>

          <div class="flex flex-col">
            <label for="">Additional Information</label>
            <textarea rows="5" cols="50" name="Work-Description" id="text-area" class="border rounded-md"
            ></textarea>
          </div>
          <button
            class="py-2 px-6 mt-5 max-w-32 bg-green-600 text-white rounded-full"
            type="submit">Submit</button
          >
        </form>
        
      </div>
    </main>

    <Footer />
  </div>
</Layout>
